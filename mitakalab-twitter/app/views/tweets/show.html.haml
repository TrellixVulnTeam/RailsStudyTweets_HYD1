%div{id: "wrapper"}
	%h1 User page
	%section{id: "content"}
		%section{id: "left"}
			%p User : #{@pageuser.username}
			%p Current User : #{current_admin_user.username}

			//%p user id : #{current_admin_user.id} or #{@userid}
			%p= link_to 'HOME', tweets_path
			%p= link_to 'my page', tweet_path(current_admin_user.id)
			%p= link_to 'log out', destroy_admin_user_session_path

			%h2{id: "not_open"} #{link_to "followed", admin_users_path + "/" + @pageuser.id.to_s + "/following"}
			-#%div
				- @followeds.each do |f|
					%p= link_to f.username + "'s page", tweet_path(f.id)
			%h2{id: "not_open"} #{link_to "follower", admin_users_path + "/" + @pageuser.id.to_s + "/followers"}
			-#%div
				- @followers.each do |f|
					%p= link_to f.username + "'s page", tweet_path(f.id)
			%h2{id: "not_open"} All user's
			%div
				- @AllUsers.each do |u|
					%p= link_to u.username + "'s page", tweet_path(u.id)
		%section{id: "right"}
			- if @pageuser.id == current_admin_user.id
				%h2= link_to 'new tweet', new_tweet_path
			- elsif current_admin_user.following?(@pageuser) == false
				%h2= link_to 'follow', 'create_follow/' + @pageuser.id.to_s
			- else
				%h2= link_to 'remove follow', 'remove_follow/' + @pageuser.id.to_s

			- @tweets.reverse_each do |tweet|
				%h2= tweet.title
				%p= tweet.content
